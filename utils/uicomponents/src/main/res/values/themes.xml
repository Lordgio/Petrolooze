<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Application light theme. -->
    <style name="Base.Theme.Petrolooze" parent="Base.Theme.Petrolooze.All">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/md_purple_300</item>
        <item name="colorPrimaryVariant">@color/md_purple_800</item>
        <item name="colorSecondary">@color/md_green_300</item>
        <item name="colorSecondaryVariant">@color/md_green_600</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/md_white_1000</item>
        <item name="colorSurface">@color/md_grey_50</item>
        <item name="colorError">@color/md_red_900</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/md_grey_200</item>
        <item name="colorOnSecondary">@color/md_grey_800</item>
        <item name="colorOnBackground">@color/md_grey_800</item>
        <item name="colorOnSurface">@color/md_grey_800</item>
        <item name="colorOnError">@color/md_white_1000</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.Petrolooze.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.Petrolooze.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Petrolooze.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Petrolooze.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Petrolooze.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Petrolooze.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Petrolooze.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Petrolooze.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Petrolooze.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Petrolooze.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Petrolooze.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Petrolooze.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Petrolooze.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Petrolooze.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Petrolooze.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Petrolooze.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Petrolooze.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.Petrolooze.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
    </style>

    <!-- Base Application theme. -->
    <style name="Base.Theme.Petrolooze.All" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:ignore="NewApi">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">?android:attr/colorBackground</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?attr/colorControlHighlight</item>
    </style>
</resources>